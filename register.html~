		<script>
			
			window.addEventListener("load",connectToHtml);
			function connectToHtml()
			{
				fname=document.getElementById("F.Name").value;
				lname=document.getElementById("L.Name").value;
				email=document.getElementById("Email").value;
				counrty=document.getElementById("Counrty").value;
				city=document.getElementById("City").value;
				date=document.getElementById("b.Date").value;
				gender=document.getElementById("Gender").value;
				pass=document.getElementById("Password").value;
				picture=document.getElementById("P.picture");
				
				form=document.getElementById("register");
				form.addEventListener("submit",submitFunction);
				
			}
			
			function submitFunction()
			{
			window.alert("test");
				request=new XMLHttpRequest();
				url="../reg.php";
				prms="F.Name="+fname+"&L.Name="+lname+"Email="+email+"&Counrty="+counrty+"&City="+city+"&b.Date="+date+"&Gender="+gender+"&Password="+pass+"&P.picture="+picture;
				request.open("POST","url",true);
				request.setRequestHeader("Content-type","application/x-www-form-urlencoded");
				var resp;
				request.onreadystatechange=function()
				{
					if(request.readyState==4 && request.status==200 )
					{
						resp = JSON.parse(request.responseText);
						if (resp.status == 'success')
						{
							//window.alert("test");
							window.location = "localhost/airwave/login.html";
						}
						else
						{
							//window.alert("failed");
							err=document.getElementById("diverr");
							err.setAttribute("style","display:block");
							errr.innerHTML = resp.reason;
							
						}
					}
					else
					{
						
					}
				}
				request.send(prms);
				
			}
	</script>
